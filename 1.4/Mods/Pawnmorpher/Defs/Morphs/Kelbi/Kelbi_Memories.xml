<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Schemas/ThoughtDef.xsd">
    <ThoughtDef ParentName="OutlookMemoryBase">
		<defName>KelbiTransformationMemory</defName>
        <stages>
            <li>
                <label>changed</label>
                <description>Why am I a deer, and a blue one at that?</description>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
            <li>
                <label>changed</label>
                <description>Lovely blue deer, whats not to like!</description>
                <baseMoodEffect>+3</baseMoodEffect>
            </li>
            <li>
                <label>changed</label>
                <description>What the hell did I do to deserve this?!</description>
                <baseMoodEffect>-5</baseMoodEffect>
            </li>
            <li>
                <label>changed</label>
                <description>I'll have to get used to this, but it'll be fun.</description>
                <baseMoodEffect>+1</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef ParentName="OutlookMemoryBase">
		<defName>KelbiRevertedMemory</defName>
        <stages>
            <li>
                <label>reverted</label>
                <description>Phew, the temptation to graze was killing me.</description>
                <baseMoodEffect>3</baseMoodEffect>
            </li>
            <li>
                <label>reverted</label>
                <description>My lovely deer form! Gone!</description>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
            <li>
                <label>reverted</label>
                <description>Never do this to me again.</description>
                <baseMoodEffect>10</baseMoodEffect>
            </li>
            <li>
                <label>reverted</label>
                <description>Well this is a disappointment.</description>
                <baseMoodEffect>-1</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
</Defs>
